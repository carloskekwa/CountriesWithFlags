<?xml version="1.0" encoding="UTF-8"?>


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_margin="5dp" 
       
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
       	app:cardElevation="10dp"
        android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res/com.code.loop">
    
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_weight="0.09"
        android:paddingLeft="@dimen/activity_horizontal_margin" >

        <ImageView
            android:id="@+id/imgalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/albumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imgalbum"
            android:text="TextView" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/albumname"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imgalbum"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="11dp" />

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/subtitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/directadd" />

        <TextView
            android:id="@+id/ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/albumname"
            android:layout_alignBottom="@+id/albumname"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/albumname"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/photonumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/subtitle"
            android:layout_alignBottom="@+id/subtitle"
            android:layout_alignLeft="@+id/ago"
            android:layout_toLeftOf="@+id/imageView2"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="11dp" />
    </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
